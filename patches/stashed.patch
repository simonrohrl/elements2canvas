+  state->SetInteger("total_op_count", static_cast<int>(buffer.total_op_count()));
+
+  state->BeginArray("paint_ops");
+  for (const PaintOp& op : buffer) {
+    state->BeginDictionary();
+    SerializePaintOpRecursive(op, state);
